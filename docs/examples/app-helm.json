{
  "name": "grafana-helm",
  "description": "Grafana installed from the Helm chart with repo credentials",
  "spec": {
    "source": {
      "kind": "helmHttp",
      "helmHttp": {
        "repoUrl": "https://grafana.github.io/helm-charts",
        "chart": "grafana",
        "version": "6.17.7",
        "credentialsSecretRef": {
          "name": "helm-creds",
          "namespace": "tn-acme-app-shop"
        },
        "values": {
          "adminUser": "admin",
          "adminPassword": "changeme",
          "service": {
            "type": "LoadBalancer"
          }
        }
      }
    }
  }
}
