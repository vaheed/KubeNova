{
  "name": "grafana-oci",
  "description": "Grafana delivered via OCI chart reference",
  "spec": {
    "source": {
      "kind": "helmOci",
      "helmOci": {
        "registry": "oci://registry-1.docker.io/grafana",
        "chart": "grafana",
        "version": "6.17.7",
        "credentialsSecretRef": {
          "name": "oci-creds",
          "namespace": "tn-acme-app-shop"
        },
        "values": {
          "persistence": {
            "enabled": true,
            "size": "2Gi"
          }
        }
      }
    }
  }
}
