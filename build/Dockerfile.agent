FROM golang:1.24 AS builder
WORKDIR /src
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 go build -o /out/kubenova-agent ./cmd/agent

FROM gcr.io/distroless/base-debian12
WORKDIR /
COPY --from=builder /out/kubenova-agent /kubenova-agent
USER 65532:65532
ENTRYPOINT ["/kubenova-agent"]
