###############################################################################
# KubeNova .env template (production‑ready) — copy to ".env"                  #
###############################################################################
# This file lists every Manager runtime variable with purpose, valid values,
# and examples. Provide real values for your environment before deploying.

############################
# Core (Manager runtime)
############################
# DATABASE_URL (REQUIRED): PostgreSQL connection string used by the Manager
#   Format: postgres://USER:PASSWORD@HOST:PORT/DB?sslmode=require
#   Example: postgres://kubenova:STRONG-PASSWORD@db.example.com:5432/kubenova?sslmode=require
DATABASE_URL=postgres://kubenova:kubenova@127.0.0.1:5432/kubenova?sslmode=disable

# KUBENOVA_REQUIRE_AUTH: enable JWT auth for API calls (RECOMMENDED: true)
#   Valid: true|false
KUBENOVA_REQUIRE_AUTH=true

# JWT_SIGNING_KEY (REQUIRED when auth enabled): HS256 secret for issuing/verifying JWTs
#   Example: change-me-super-secret
JWT_SIGNING_KEY=change-me-super-secret

# MANAGER_URL: externally reachable Manager URL used by the in-cluster operator for heartbeats
#   Example: https://manager.example.com
MANAGER_URL=http://localhost:8080

# BATCH_INTERVAL_SECONDS: heartbeat interval for the operator (integer seconds)
BATCH_INTERVAL_SECONDS=10

# Addon versions (override defaults baked into the operator image)
#CERT_MANAGER_VERSION=v1.14.4
#CAPSULE_VERSION=0.5.3
#CAPSULE_PROXY_VERSION=0.9.13
#VELA_VERSION=1.9.11
#FLUXCD_VERSION=2.12.2
#VELAUX_VERSION=v1.9.5
#VELA_CLI_VERSION=1.9.11

# Optional component repos (override defaults baked into the manager/operator)
#VELAUX_REPO=oci://ghcr.io/kubevela/velaux
#FLUXCD_REPO=https://fluxcd-community.github.io/helm-charts
#CAPSULE_PROXY_PUBLIC_URL=https://proxy.example.com   # external URL used when generating kubeconfigs

# Component bootstrap switches (set false to skip installing)
#BOOTSTRAP_CERT_MANAGER=true
#BOOTSTRAP_CAPSULE=true
#BOOTSTRAP_CAPSULE_PROXY=true
#BOOTSTRAP_KUBEVELA=true
#BOOTSTRAP_FLUXCD=true
#BOOTSTRAP_VELAUX=true

# Proxy settings passed through to Helm if required
#HTTP_PROXY=http://proxy.internal:3128
#HTTPS_PROXY=http://proxy.internal:3128
#NO_PROXY=localhost,127.0.0.1
