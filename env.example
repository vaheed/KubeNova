# -----------------------------------------------------------------------------
# KubeNova environment defaults (.env.example)
# -----------------------------------------------------------------------------
KUBENOVA_DB_URL=postgres://kubenova:kubenova@db:5432/kubenova?sslmode=disable
# Compose and the Manager use DATABASE_URL; keep it aligned with service name 'db'.
DATABASE_URL=postgres://kubenova:kubenova@db:5432/kubenova?sslmode=disable
KUBENOVA_REQUIRE_AUTH=true
# 32-byte base64 keys (generate: `openssl rand -base64 32`)
KUBENOVA_JWT_SIGNING_KEY=replace-with-base64-32bytes
KUBENOVA_KMS_MASTER_KEY=replace-with-base64-32bytes
KUBENOVA_HTTP_ADDR=:8080
LOG_LEVEL=info
POSTGRES_USER=kubenova
POSTGRES_PASSWORD=kubenova
POSTGRES_DB=kubenova
AGENT_IMAGE=ghcr.io/vaheed/kubenova/agent:dev
MANAGER_URL_PUBLIC=http://kubenova-manager.kubenova-system.svc.cluster.local:8080
# Capsule proxy URL used when issuing kubeconfigs for tenants
CAPSULE_PROXY_URL=https://capsule-proxy.capsule-system.svc

# Bootstrap pins (Agent reads and passes into the Helm bootstrap job)
# Override these to control add-on versions deployed by the Agent.
CAPSULE_VERSION=0.10.6
CAPSULE_PROXY_VERSION=0.9.13
# Leave empty to use the chart's latest compatible version.
VELA_CORE_VERSION=

# Agent telemetry batching (applied to in-cluster Agent Deployment)
BATCH_INTERVAL_SECONDS=10
# Note: Manager image in GHCR: ghcr.io/vaheed/kubenova/manager:dev
